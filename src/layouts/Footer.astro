---
import Logo from "@/assets/logo/logo-1.png";
import Socials from "@/components/shared/Socials.astro";
import Section from "@/layouts/Section.astro";
import { cn } from "@/lib/utils";
import { Image } from "astro:assets";
interface Props {
  className?: string;
}

const { className } = Astro.props as Props;
---

<Section
  as={"footer"}
  size="small"
  extension="none"
  className={cn(
    "vertical items-end justify-center [&_a:hover]:underline [&>*]:px-10 backdrop-blur-sm bg-darkMode-500 text-white border-b border-b-stone-400",
    className
  )}
  transition:animate={"none"}>
  <section class="full horizontal items-center justify-between">
      <Image src={Logo} alt="logo de alabordarbre" width="70" height="70" />
      <div class={`grow`}></div>

        <article class="font-bold">
          <Socials />
        </article>
  </section>
</Section>
