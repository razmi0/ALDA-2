---
import { cn } from "@/lib/utils";
import type { HTMLTag } from "astro/types";
import Nav from "./Nav.astro";
import Section from "./Section.astro";
import Socials from "./Socials.astro";
interface Props {
  className?: string;
  as: HTMLTag;
}

const { as, className } = Astro.props as Props;
---

<Section
  as={as}
  size="quarter"
  extension="none"
  className={cn("vertical items-end justify-center [&_a:hover]:underline [&>*]:px-10", className)}
  data-is={`global-${as}`}
  transition:animate={"none"}>
  <section class="full horizontal items-center justify-between">
    <h1 class="text-2xl">
      <a href="/"> A l'abordarbre</a>
    </h1>
    <Nav className="text-black/80 font-semibold space-x-16" />

    {
      as === "footer" ? (
        <article class=" font-bold">
          <Socials />
        </article>
      ) : (
        <>
          <span class="font-bold text-2xl">LOGO</span>
          {/* <ModeToogle /> */}
        </>
      )
    }
  </section>
  {
    // as === "footer" ? (
    // <a class="uppercase text-[0.8rem] mt-2 block text-right" href="https://github.com/razmi0">dev by razmio</a>
    // ) : <></>
  }
</Section>
