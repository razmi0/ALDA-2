---
import Loader from "@/components/Loader.astro";
import TopPageButton from "@/components/TopPageButton";
import "@/styles/globals.css";
import { AstroFont } from "astro-font";
import { SEO } from "astro-seo";

interface Props {
    title: string;
    className?: string;
    description: string;
}

const { title, className, description } = Astro.props;

const allowIndexing = Astro.url.pathname !== "/maintenance" && Astro.url.pathname !== "/honey";
const metaKeys = [
    "sport",
    "escalade",
    "grimpeur",
    "nature",
    "grimpe d'arbre",
    "escalade d'arbre",
    "animations",
    "événements",
    "aventure en forêt",
    "Toulouse",
    "Midi-Pyrénées",
    "loisirs en plein air",
    "recherche environnementale",
];
const metaTitle = title.charAt(0).toUpperCase() + title.slice(1) + " - Alabordarbre";
---

<html lang="en" class={className}>
    <head>
        <meta name="author" content="Alabordarbre" />
        <meta name="keywords" content={metaKeys.join(", ")} />
        <SEO
            noindex={!allowIndexing}
            nofollow={!allowIndexing}
            canonical={"https://alabordarbre.fr"}
            charset="UTF-8"
            title={metaTitle}
            description={description}
            openGraph={{
                basic: {
                    title: "Alabordarbre – Grimpe et escalade d’arbre à Toulouse | Animations & Événements",
                    image: "https://alabordarbre.fr/og-img.webp",
                    type: "website",
                    url: "https://alabordarbre.fr",
                },
                optional: {
                    locale: "fr_FR",
                    siteName: "alabordarbre",
                    description: description,
                    video: "https://www.alabordarbre.fr/catch/catch.mp4",
                },
                image: {
                    url: "https://alabordarbre.fr/og-img.webp",
                    alt: "Alabordarbre",
                    width: 600,
                    height: 315,
                    type: "image/webp",
                },
            }}
        />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <AstroFont
            config={[
                {
                    name: "Grandstander",
                    src: [
                        {
                            style: "normal",
                            weight: "600",
                            path: "./public/fonts/Grandstander.ttf",
                        },
                    ],
                    preload: true,
                    display: "swap",
                    selector: "h1, h2, .grandstander",
                    fallback: "sans-serif",
                },
                {
                    name: "IMFellDWPica",
                    src: [
                        {
                            weight: "normal",
                            style: "normal",
                            path: "./public/fonts/IMFellDWPica.ttf",
                        },
                    ],
                    preload: true,
                    display: "swap",
                    selector: "h3, h4, h5, h6, .im-fell-dw-pica-regular",
                    fallback: "sans-serif",
                },
                {
                    name: "QuattrocentoSans-Regular",
                    src: [
                        {
                            weight: "normal",
                            style: "normal",
                            path: "./public/fonts/QuattrocentoSans-Regular.ttf",
                        },
                    ],
                    preload: true,
                    display: "swap",
                    selector: "body, .quattrocento-sans-regular",
                    fallback: "sans-serif",
                },
                {
                    name: "QuattrocentoSans-Bold",
                    src: [
                        {
                            weight: "bold",
                            style: "normal",
                            path: "./public/fonts/QuattrocentoSans-Bold.ttf",
                        },
                    ],
                    preload: true,
                    display: "swap",
                    selector: ".quattrocento-sans-bold",
                    fallback: "sans-serif",
                },
            ]}
        />
    </head>
    <body class={`relative`}>
        <Loader />
        <slot name="header" />
        <main>
            <slot />
        </main>
        <slot name="footer" />
        <TopPageButton client:idle />
    </body>
</html>
