---
import OpenQuote from "@/components/Icons/OpenQuote.astro";
import RandomImage from "@/components/shared/RandomImage.astro";

const quote =
  "Quand le dernier arbre aura été abattu, quand la dernière rivière aura été empoisonnée, quand les derniers poissons aura été pêché, alors on saura que l'argent ne se mange pas";
---

<article class="horizontal center shadow-2xl shadow-black z-10 [&>*]:h-[450px] [&>*]:w-[425px] text-white/50">
  <RandomImage size={500} className=" rounded-tl-sm rounded-bl-sm" />
  <div class="vertical center w-5/12 bg-earth-700 px-14 gap-3 rounded-tr-sm rounded-br-sm">
    <blockquote class="leading-6">
      <div class="w-full translate-y-6" aria-roledescription="open quote">
        <OpenQuote />
      </div>
      <p class="text-lg indent-10">{quote}</p>
    </blockquote>
    <footer class="w-full mt-2">
      <address class="text-white/90 font-semibold">Vijay Leblanc</address>
      <p class="text-pur-500 font-semibold">Fondateur</p>
    </footer>
  </div>
</article>
