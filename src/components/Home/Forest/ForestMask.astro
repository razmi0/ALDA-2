---
import Section from "@/layouts/Section.astro";
import { Image } from "astro:assets";
import BackgroundForest from "./assets/forest-bg.webp";
import Forest from "./assets/forest.webp";
---

<Section
  size="quarter"
  extension="sm"
  className="bg-map-dark relative overflow-x-hidden overflow-y-hidden z-10 flex justify-start items-start"
>
  <Image
    src={Forest}
    alt={"forest foreground"}
    class={"absolute bottom-0 object-cover min-w-[632px] w-full z-[1] [transform:_scale(-1,1)_translateY(75px)] xl:[transform:_scale(-1,1)_translateY(125px)]"}
  />
  <Image
    src={BackgroundForest}
    alt={"forest background"}
    style={"transform: translateY(-20px);"}
    class={"absolute bottom-0 object-cover min-w-[632px] w-full z-0"}
  />
</Section>
