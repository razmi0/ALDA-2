---
import BirdIcon from "@/components/icons/Bird.astro";
import Article from "../Article.astro";
import Button from "../Button.astro";
import CTA from "../CTA.astro";
---

<div class="w-fit h-fit vertical px-12 gap-10">
  <div class="vertical items-start gap-6 z-10">
    <Article words1={35} words2={30} className="max-w-[50ch]" pClass={"max-w-[50ch] text-white/60"}>
      <BirdIcon />
    </Article>
    <CTA href="/contact"><Button size="lg" variant="outline" className="hover:bg-white/20">Contact </Button></CTA>
  </div>
</div>
