---
import TreeIcon from "@/components/icons/Tree.astro";
import Section from "@/layouts/Section.astro";
import Article from "../Article.astro";
import RandomImage from "../RandomImage.astro";
import LocationExplorer from "./LocationExplorer/LocationExplorer.astro";
import LocationFigure from "./LocationExplorer/LocationFigure.astro";
---

<Section
  size="full"
  extension="sm"
  className="relative bg-map-dark text-white flex flex-col lg:flex-row items-center justify-around pt-36 lg:pt-0"
>
  <div class="relative h-full w-full horizontal center md:max-w-[900px] md:max-h-[700px]">
    <LocationFigure>
      <LocationExplorer />
    </LocationFigure>
  </div>
  <!-- | -->
  <!-- | -->
  <!-- NEXT ARTICLE -->
  <!-- | -->
  <article class="w-fit flex flex-col px-12 items-start justify-center gap-10">
    <!-- ARTICLE HEADER HERE -->
    <Article nWord1={30} nWord2={40} className="max-w-[50ch] ">
      <TreeIcon />
    </Article>

    <!-- ARTICLE HEADER HERE -->
    <figure class="h-full flex flex-row justify-end items-center mt-1 gap-4">
      <RandomImage />
      <RandomImage />
    </figure>
  </article>
</Section>
