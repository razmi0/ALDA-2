---
import DesktopMenu from "./DesktopMenu.astro";
import MobileMenu from "./MobileMenu";
import type { WebsiteLink } from "./types";

const isActivePath = (path: string) => Astro.url.pathname === path;

const websiteLinks: WebsiteLink[] = [
    { name: "Accueil", href: "/", isActive: isActivePath("/") },
    { name: "Nous", href: "/nous", isActive: isActivePath("/nous") },
    { name: "FAQs", href: "/FAQ", isActive: isActivePath("/FAQ") },
    { name: "Contact", href: "/contact", isActive: isActivePath("/contact") },
    { name: "Activit√©s", href: "/activites", isActive: isActivePath("/activites") },
];
---

<nav class="text-white font-semibold">
    <MobileMenu client:only="react" websiteLinks={websiteLinks} />
    <DesktopMenu websiteLinks={websiteLinks} />
</nav>
