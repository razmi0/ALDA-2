---
import Logo from "@/components/Nav/Logo.astro";
import Nav from "@/components/Nav/Nav.astro";
import Section from "@/layouts/Section.astro";
import { cn } from "@/lib/utils";
interface Props {
  className?: string;
}

const { className } = Astro.props as Props;
---

<Section
  as={"header"}
  size="small"
  extension="none"
  className={cn(
    "absolute top-0 z-50 vertical items-end justify-center [&_a:hover]:underline px-2 sm:px-5 backdrop-blur-sm bg-[#fdfdfdf8] text-darkMode-500",
    className
  )}
  transition:animate={"none"}>
  <section class="full horizontal items-center justify-between">
    <Logo />

    <h1 class="text-2xl h-fit block ml-2 text-pur-500">
      <a href="/">A l'abordarbre</a>
    </h1>
    <div class={`grow`}></div>
    <Nav className="" />
  </section>
</Section>
