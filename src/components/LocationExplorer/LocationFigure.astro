---
import { Image } from "astro:assets";
import Map from "@/assets/map-2.png";
---

<figure class="relative h-10/12 w-10/12">
  <div
    class="absolute-align full z-50 pointer-events-none [box-shadow:_inset_0px_-40px_25px_50px_rgba(11,14,22,_0.8);]"
  >
  </div>
  <Image src={Map} class="full object-cover z-10" alt="hero" data-debug="fade-out-map" />
  <figcaption class="absolute bottom-1/4 right-16 text-slate-300">
    <small>south of france</small>
  </figcaption>
  <slot />
</figure>
