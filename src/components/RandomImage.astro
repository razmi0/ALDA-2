---
import { cn } from "@/lib/utils";
import Image from "astro/components/Image.astro";

interface Props {
  size?: number;
  className?: string;
  seed?: number;
  width?: number;
  height?: number;
}

const { size, className, seed, height, width } = Astro.props;
---

<Image
  class={cn("aspect-square object-cover ", className)}
  src={`https://picsum.photos/${seed || size || 150}`}
  alt="lorem"
  width={width || size || 150}
  height={height || size || 150}
/>
