---
import { cn } from "@/lib/utils";
import Image from "astro/components/Image.astro";
import type { HTMLAttributes } from "astro/types";

interface Props {
  size?: number;
  className?: string;
  seed?: number;
  width?: number;
  height?: number;
  style?: string;
  rest?: HTMLAttributes<"img">;
}

const { size, className, seed = Math.floor(Math.random() * 100), height, width, style } = Astro.props;
---

<Image
  class={cn("aspect-square object-cover max-w-none", className)}
  src={`https://picsum.photos/${seed + (size || width || 150)}`}
  alt="lorem"
  width={width || size || 150}
  height={height || size || 150}
  style={style}
/>
