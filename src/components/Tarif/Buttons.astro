---
import { Minus, Plus } from "lucide-react";
import type { ProductType } from "../Products/types";

interface Props {
  product: ProductType;
}

const { product } = Astro.props;
---

<section class="horizontal center w-fit ring-1 ring-slate-300 h-9" data-id={product.id}>
  <button class="w-full [&>*]:mx-auto" data-action={`remove#${product.id}`}>
    <Minus size="18" />
  </button>
  <span class="tabular-nums w-16 text-center font-semibold">1</span>
  <button class="w-full [&>*]:mx-auto" data-action={`add#${product.id}`}>
    <Plus size="18" />
  </button>
</section>
