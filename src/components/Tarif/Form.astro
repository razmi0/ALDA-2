---
interface Props {
  key: string | number;
  id: string | number;
}

const { id, key } = Astro.props;
---

<style>
  .hp {
    @apply hidden;
  }
</style>
<form data-form={`form#${key}`}>
  <input type="hidden" name="product_id" value={id} />
  <label class="hp" for="hp">Hi honey !<input type="text" id="hp" name="hp" /></label>
  <slot />
</form>
