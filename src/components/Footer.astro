---
import Logo from "@/components/Nav/Logo.astro";

import Socials from "@/components/shared/Socials.astro";
import Section from "@/layouts/Section.astro";
import { cn } from "@/lib/utils";
interface Props {
    className?: string;
}

const { className } = Astro.props as Props;
---

<Section
    as={"footer"}
    size="small"
    extension="none"
    className={cn(
        "vertical items-end justify-center [&_a:hover]:underline [&>*]:px-10 backdrop-blur-sm bg-darkMode-500 text-white",
        className
    )}
    transition:animate={"none"}>
    <section class="full horizontal items-center justify-between">
        <Logo loading="lazy" />
        <div class={`grow`}></div>
        <article class="font-bold">
            <Socials />
        </article>
    </section>
</Section>
